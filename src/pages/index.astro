---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Antihero from '../components/Antihero.astro';
import Header from '../components/Header.astro';
import SectionCards from '../components/SectionCards.astro';
import AccesoriosHome from '../components/AccesoriosHome.astro';
// import DestacadosHome from '../components/React/DestacadosHome.jsx';
import DestacadosHome from '../components/DestacadosHome.astro';


import { getCollection } from 'astro:content';
const guias = await getCollection('guias', ({ data }) => data.home === true);
const juegos = await getCollection('juegos', ({ data }) => data.home === true);
const accesorios = await getCollection('accesorios', ({ data }) => data.home === true);
// const guias = await getCollection('guias');

const titulo = 'xxxxxxxxxx';
const desc = 'xxxxxxxxxxx';
const seoObj = {
  title : titulo,
  description: desc,
  image: '/images/general/hero_bckg_1.webp',
}

---

<Layout seoObj={seoObj}>
	
	<Header />
	<Hero />

	<main class="my-4 w-9/12 mx-auto m-auto">
		<DestacadosHome items={guias} prefix="/guias/"/>
		<SectionCards items={juegos} prefix="/juegos/"/>
		<AccesoriosHome items={accesorios} />
	</main>	

	<Antihero />
</Layout>

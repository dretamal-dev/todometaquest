---

<Layout seoObj={seoObj}>

	<Header />

	<ShortHero 
		title={titulo} 
		description={desc}
		image={getOptimizedImage('/images/general/diccionario-terminos-meta-quest-3-realidad-virtual.webp', false)}
		bgposition="center"
	>
		<div class="z-2 absolute bottom-0 mb-4">
			<Filter target=".js-filter-box" client:load/>
		</div>
	</ShortHero> 

  <section aria-label={titulo} class="my-4 mb-20 w-9/12 mx-auto m-auto flex flex-wrap gap-4 justify-center js-filter-box transition-transform duration-300">
    <ul class="js-filter-box divide-y divide-gray-700">
      {terminos.map(termino => (				
        <li id={termino.term.toLowerCase().replace(/\s+/g, '-')} class="p-4 mb-2 rounded-t-md hover:bg-slate-900 hover:scale-105 transition-all duration-200" data-jsfilter-search={termino.term} >
            <article itemscope itemtype="https://schema.org/DefinedTerm">
                <h2 itemprop="name" class="text-2xl font-semibold text-gray-200">{termino.term}</h2>
                <p itemprop="description" class="text-gray-300 mt-1">
                {termino.description}
                </p>
            </article>
        </li>
				))}        
      
    </ul>
  </section>

</Layout>


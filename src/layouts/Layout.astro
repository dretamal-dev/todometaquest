---
	import "../styles/global.css";
	import CookieBanner from "../components/CookieBanner.astro";
	import MetaSeo from "../components/Seo/MetaSeo.astro";
	import { ClientRouter } from "astro:transitions";
	const Year = new Date().getFullYear();
	const currentDomain = Astro.url.hostname; 

	const { seoObj } = Astro.props;

---
<!doctype html>
<html lang="en" class="dark">
	<head>


		<MetaSeo seoObj={seoObj} />



		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

		<ClientRouter />
	</head>
	<body class="bg-slate-800 text-white font-sans min-h-screen flex flex-col">
		<slot />
		<footer class="w-full bg-gradient-to-r from-slate-900 to-slate-600 text-center py-4 mt-auto">
			<p class="text-sm text-gray-400">© {Year} {currentDomain} - Todos los derechos reservados. - <a class="hover:underline" href="/politica-cookies">Política de cookies</a></p>
		</footer>

		<CookieBanner />

	</body>
</html>
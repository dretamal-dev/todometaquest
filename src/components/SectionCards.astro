---
let { items, prefix } = Astro.props;
items = items.sort(() => Math.random() - 0.5);
console.log(items[0])
---


<section class="px-6 md:px-16 py-12">

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-10 items-stretch">
    <div class="flex flex-col gap-6 md:col-span-1 min-h-[800px]">
      {items.slice(0, 4).map(item => (
        <a 
          href={prefix + item.slug}
          class="rounded-2xl overflow-hidden shadow-xl flex-1 flex flex-col relative hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-orange-500"
          style={`background-image: url('${item.data.img}'); background-size: cover; background-position: center;`}
        >
          <div class="absolute inset-0 bg-zinc-900/30"></div>
          <div class="absolute bottom-0 left-0 w-full p-4 flex flex-col items-start z-10 bg-gradient-to-t from-zinc-900/80 via-zinc-900/40 to-transparent">
            <h3 class="font-bold text-xl mb-1 text-white">{item.data.title}</h3>
            <p class="text-sm text-zinc-300 mb-2">{item.data.description}</p>
          </div>
        </a>
      ))}
    </div>
    <div class="flex flex-col gap-6 h-full md:col-span-2">
      {items.slice(4, 6).map(item => (
        <a 
          href={prefix + item.slug}
          class="rounded-2xl overflow-hidden shadow-xl flex-1 flex flex-col relative hover:scale-105 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-orange-500"
          style={`background-image: url('${item.data.img}'); background-size: cover; background-position: center;`}
        >
          <div class="absolute inset-0 bg-zinc-900/30"></div>
          <div class="absolute bottom-0 right-0 w-full p-4 flex flex-col items-end z-10 bg-gradient-to-t from-zinc-900/80 via-zinc-900/40 to-transparent">
            <h3 class="font-bold text-4xl mb-1 text-white mb-4 text-right">{item.data.title}</h3>
            <p class="text-xl text-zinc-300 mb-2 text-right">{item.data.description}</p>
          </div>
        </a>
      ))}
    </div>
  </div>

</section>

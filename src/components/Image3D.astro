---
const randomId = 'image3D-' + Math.random().toString(36).substring(2, 15);
---
 <!-- <figure class="css-figure-3d perspective-distant  w-auto"> -->
 <figure id={randomId} class="perspective-distant w-[fit-content] relative">
    <slot/>
</figure>

<script is:inline define:vars={{ randomId }}>
  const style = document.createElement('style');
  style.textContent = `
  #${randomId} > * {
    transform: rotateX(10deg) rotateY(-18deg) rotateZ(3deg);
    transition: .3s;
    border-radius: 0.375em;
    box-shadow: 2px 10px 30px hsla(0, 0%, 0%, 0.25);
  }
  #${randomId}:hover > * {
    transform: rotate(0);
  }
  `;
  document.head.appendChild(style);
</script>